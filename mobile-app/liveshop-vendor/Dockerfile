FROM node:18 as build
WORKDIR /app

# Installer pnpm
RUN npm install -g pnpm

# Copier les fichiers de d√©pendances
COPY package.json pnpm-lock.yaml ./

# Installer les d√©pendances avec pnpm (sans frozen-lockfile)
RUN pnpm install --no-frozen-lockfile

# Copier le reste du code
COPY . .

# Build avec pnpm en mode PRODUCTION (important pour .env.production)
ENV NODE_ENV=production

# Debug : Afficher le contenu de .env.production
RUN echo "üìã Contenu de .env.production:" && cat .env.production || echo "‚ùå Fichier .env.production non trouv√©"

RUN pnpm run build

# Debug : V√©rifier que l'URL est correcte dans le build
RUN echo "üîç V√©rification du build..." && \
    grep -r "localhost:3001" dist/ && echo "‚ö†Ô∏è ATTENTION: localhost:3001 trouv√© dans le build!" || echo "‚úÖ Pas de localhost:3001 dans le build" && \
    grep -r "api.livelink.store" dist/ && echo "‚úÖ api.livelink.store trouv√© dans le build" || echo "‚ö†Ô∏è ATTENTION: api.livelink.store NOT FOUND"

FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
